<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.DetailFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/morePlace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_top_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TxtMorePlace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical|left"
            android:paddingLeft="20dp"
            android:text="장소 정보 더보기" />

        <ImageButton
            android:id="@+id/IbtnMorePlace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_top_border"
            android:src="@drawable/ic_chevron_right_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/findMyLocation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bottom_top_border"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_place_blue_24dp" />
        <TextView
            android:id="@+id/TxtAdress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical|start"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="대한민국 서울특별시 종로구 종로1,2,3,4가동 종로1길 15" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/relatedTopics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:backgroundTint="#000000"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|start"
            android:paddingLeft="20dp"
            android:text="관련 항목 :" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical|start"
            android:text="#종각  #을지로  #사당  #종로3가  #시청" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPopularImg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_top_border"
            android:text="인기 게시물" />

        <Button
            android:id="@+id/btnRecentImg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_top_border"
            android:text="최근 게시물" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ImgFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">>
    </FrameLayout>

</LinearLayout>