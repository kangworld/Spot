<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 내부 색상 설정 -->
    <solid android:color="@color/white" />

    <!-- 테두리 내부 여백 설정 -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />

    <!-- 테두리 설정: 두께, 색상 -->
    <stroke
        android:width="0.1dp"
        android:color="@color/grey" />
    <corners android:radius="3dp"></corners>
</shape>